<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>@Model.PageTitle</title>
    @RenderSection("stylesheet")
    <link rel="stylesheet" href="~/css/locus-font.css">
    <link rel="stylesheet" href="~/css/page_layout.css">
    <link rel="stylesheet" href="~/css/navigation.css">
    <link rel="stylesheet" href="~/css/top_bar.css">
    <link rel="stylesheet" href="~/css/content_header.css">

</head>
<body id="body">
    <section id="top-bar">
        <div class="top-bar no-select">
            <div class="top-bar__brand-wrapper">
                <i class="icon-compass top-bar__brand-icon"></i>
                <div class="top-bar__brand-title">LOCUS</div>
            </div>
            <div class="top-bar__input-wrapper">
                <i class="icon-search top-bar__input-icon"></i>
                @RenderSection("top_bar", required: true)
            </div>
            <div class="top-bar__account-wrapper"></div>
        </div>
    </section>
    <nav id="side-bar">
        <div class="navigation no-select">
            @RenderSection("side_bar", required: true)
        </div>
    </nav>
    <section id="content">
        <div class="content-header no-select">
            <div class="content-header__group">
                <div class="content-header__organisation">Nelson Park School</div>
                <div class="content-header__index">
                    <i class="icon-home"></i>
                    <div class="content-header__controller">@(" / " + Model.Controller + " /")</div>
                    <div class="content-header__action">@Model.Action</div>
                </div>
            </div>
            @RenderSection("content_header", required: false)
        </div>
        @RenderSection("content", required: true)
    </section>
    @RenderSection("javascript", required: false)
</body>
</html>